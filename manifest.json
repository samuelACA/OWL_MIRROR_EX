{
  "manifest_version": 1,
  "name": "Owlbear Token Mirror",
  "version": "1.0.0",
  "author": "Samuel Almeida",
  "description": "Mirror tokens and synchronize movements in real-time.",
  "icons": {
    "128": "frontend/icons/mirror.svg"
  },
  "background": {
    "scripts": ["frontend/script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.owlbear.rodeo/*"],
      "js": ["frontend/ui/controls.js"],
      "css": ["frontend/styles.css"]
    }
  ]
}
